<Window x:Class="HelloWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="134*"/>
            <ColumnDefinition Width="617*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="2" Content="Màn hình đăng nhập" HorizontalAlignment="Left" Margin="114,123,0,0" VerticalAlignment="Top" Height="89" Width="378" FontSize="24" Foreground="#FFE91717" Background="#FFB2F4B5"/>
        <Button x:Name="btnDangnNhap" Grid.Column="2" Content="Đăng nhập" HorizontalAlignment="Left" Margin="79,310,0,0" VerticalAlignment="Top" Height="65" Width="165" FontSize="20" Click="btnDangnNhap_Click"/>
        <Button x:Name="btnThoat" Grid.Column="2" Content="Thoát" HorizontalAlignment="Left" Margin="348,310,0,0" VerticalAlignment="Top" Height="65" Width="165" FontSize="20" Click="btnThoat_Click"/>
        <Label Grid.Column="2" Content="User name" HorizontalAlignment="Left" Margin="79,224,0,0" VerticalAlignment="Top" Height="42" Width="103" FontSize="20" RenderTransformOrigin="-0.108,0.722"/>
        <TextBox x:Name="txtUserName" Grid.Column="2" HorizontalAlignment="Left" Margin="231,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="261" Height="29"/>
        <Label Grid.Column="2" Content="Password" HorizontalAlignment="Left" Margin="89,266,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" Grid.Column="2" HorizontalAlignment="Left" Margin="231,270,0,0" VerticalAlignment="Top" Width="261" Height="31"/>

    </Grid>
</Window>
